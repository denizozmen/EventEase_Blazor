@page "/events"
@using EventEase_Blazor.Models
@using EventEase_Blazor.Components

<h1>Events</h1>

@if (events.Any())
{
    @foreach (var eventItem in events)
    {
        <EventCard Event="eventItem" />
    }
}
else
{
    <p>There are no events yet.</p>
}

